<div id="main-content" class="card">
  <header>
    <h1 id="fxa-avatar-camera-header">{{#t}}Account picture{{/t}}</h1>
  </header>

  <section>
    <div class="avatar-wrapper">
      <div class="progress-container">
      </div>
      <video id="video" class="hidden"></video>
    </div>

    <div class="error"></div>
    <div class="success"></div>

    <canvas id="canvas"></canvas>

    <form novalidate>
      <div class="button-row">
        <button id="submit-btn" type="submit" class="disabled">{{#t}}Take picture{{/t}}</button>
      </div>
    </form>

    <ul class="links">
      <li><a href="/settings/avatar/change" class="cancel">{{#t}}Cancel{{/t}}</a>
    </ul>
  </section>
</div>
