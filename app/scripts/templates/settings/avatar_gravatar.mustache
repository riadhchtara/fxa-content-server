<div id="main-content" class="card">
  <header>
    <h1 id="fxa-avatar-gravatar-header">{{#t}}Account picture{{/t}}</h1>
  </header>

  <section>
    <div class="avatar-wrapper with-default">
      {{#gravatar}}
        <img src="{{ gravatar }}" id="gravatar"/>
      {{/gravatar}}
    </div>

    <div class="error"></div>
    <div class="success"></div>

    <form novalidate>
      <div class="button-row">
        <button id="submit-btn" type="submit" {{^gravatar}}class="disabled"{{/gravatar}}>{{#t}}Save{{/t}}</button>
      </div>
    </form>
    <ul class="links">
      <li><a href="/settings/avatar/change" class="cancel">{{#t}}Cancel{{/t}}</a>
    </ul>
  </section>
</div>
